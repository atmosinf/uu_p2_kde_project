@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix ex: <http://example.org/movie/> .

# --- Ontology Header ---
ex:MovieRecOntology a owl:Ontology ;
    rdfs:label "Movie Recommendation Ontology" .

# --- Classes ---
ex:Person a owl:Class ;
    rdfs:label "Person" .

ex:Actor a owl:Class ;
    rdfs:subClassOf ex:Person ;
    rdfs:label "Actor" .

ex:Director a owl:Class ;
    rdfs:subClassOf ex:Person ;
    rdfs:label "Director" .

ex:Genre a owl:Class ;
    rdfs:label "Genre" .

ex:Movie a owl:Class ;
    rdfs:label "Movie" ;
    # Constraint: Every Movie MUST have a title
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty ex:title ;
        owl:minCardinality "1"^^xsd:nonNegativeInteger
    ] .

# --- Properties ---
ex:title a owl:DatatypeProperty ;
    rdfs:domain ex:Movie ;
    rdfs:range xsd:string .

ex:year a owl:DatatypeProperty ;
    rdfs:domain ex:Movie ;
    rdfs:range xsd:gYear .

ex:runtime a owl:DatatypeProperty ;
    rdfs:domain ex:Movie ;
    rdfs:range xsd:float .

ex:director a owl:ObjectProperty ;
    rdfs:domain ex:Movie ;
    rdfs:range ex:Director .

ex:actor a owl:ObjectProperty ;
    rdfs:domain ex:Movie ;
    rdfs:range ex:Actor .

ex:genre a owl:ObjectProperty ;
    rdfs:domain ex:Movie ;
    rdfs:range ex:Genre .

# --- Genre Hierarchy (From RDFS version, valid in OWL) ---
ex:Fiction a ex:Genre .
ex:SpeculativeFiction a ex:Genre ;
    rdfs:subClassOf ex:Fiction .

# Specific Mappings
ex:science_fiction a ex:Genre ;
    rdfs:subClassOf ex:SpeculativeFiction ;
    rdfs:label "Science Fiction" .

ex:fantasy a ex:Genre ;
    rdfs:subClassOf ex:SpeculativeFiction ;
    rdfs:label "Fantasy" .

ex:ActionAdventure a ex:Genre ;
    rdfs:subClassOf ex:Fiction .

ex:adventure a ex:Genre ;
    rdfs:subClassOf ex:ActionAdventure ;
    rdfs:label "Adventure" .

ex:action a ex:Genre ;
    rdfs:subClassOf ex:ActionAdventure ;
    rdfs:label "Action" .

ex:Thriller a ex:Genre ;
    rdfs:subClassOf ex:Fiction .

ex:crime a ex:Genre ;
    rdfs:subClassOf ex:Thriller ;
    rdfs:label "Crime" .
